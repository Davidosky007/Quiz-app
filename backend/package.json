{
  "name": "quiz-app-backend",
  "version": "1.0.0",
  "description": "Quiz application backend",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,js,json --exec ts-node src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "start:prod": "set NODE_ENV=production&& node dist/app.js",
    "postbuild": "node -e \"require('fs').copyFileSync('package.json','dist/package.json')\"",
    "db:create": "node -e \"console.log('Use psql to create DB: CREATE DATABASE quiz_app;')\"",
    "db:migrate": "powershell -Command \"$env:PGPASSWORD=$env:DB_PASSWORD; psql -U $env:DB_USERNAME -h $env:DB_HOST -p $env:DB_PORT -d $env:DB_NAME -f ./src/utils/schema.sql\"",
  "db:setup": "ts-node src/utils/dbSetup.ts",
  "db:seed": "ts-node src/utils/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.5",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2"
  }
}
